<form action="{{ galaxy is defined ? '/galaxies/' ~ galaxy.id : '/galaxies' }}" method="POST" enctype="multipart/form-data">
  {% if galaxy is defined %}
    <input type="hidden" name="_method" value="PATCH">
  {% endif %}

  <div>
    <label for="name">Name your galaxy:</label>
    <input type="text" id="name" name="name" required value="{{ galaxy is defined ? galaxy.name : '' }}">
  </div>

  <div>
    <label for="size">Enter the size of your galaxy:</label>
    <input type="number" id="size" name="size" required value="{{ galaxy is defined ? galaxy.size : '' }}">
  </div>

  <div>
    <label for="description">Describe your galaxy:</label>
    <textarea id="description" name="description" required>{{ galaxy is defined ? galaxy.description : '' }}</textarea>
  </div>
{% include "images/_form.twig" %}
  <div>
    <button type="submit">
      {{ galaxy and galaxy.name ? "Update Galaxy" : "Create Galaxy" }}
    </button>
  </div>
</form>


