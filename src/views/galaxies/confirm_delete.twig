{% extends "layouts/_default.twig" %}
{% block pageName %}
{% endblock %}
{% block content %}
<h3>Wait!</h3>
<p>You're about to delete <strong>{{ galaxy.name }}</strong>. Are you sure you want to proceed? You cannot undo this action!</p>
<form method="POST" action="/galaxies/{{ galaxy.id }}/delete">
<button type="submit">Yes, delete it!</button>
<a href="/galaxies">Cancel</a>
</form>
{% endblock %}